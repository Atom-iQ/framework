{
  "name": "@atom-iq/framework",
  "version": "0.3.0-alpha",
  "license": "MIT",
  "description": "Atom-iQ Framework Monorepo",
  "scripts": {
    "build": "lerna run build --scope",
    "build:all": "lerna run build",
    "build:core": "yarn build @atom-iq/core",
    "build:cli": "yarn build @atom-iq/cli",
    "build:fx": "yarn build @atom-iq/fx",
    "build:rx": "yarn build @atom-iq/rx",
    "test": "jest --coverage",
    "test:plugin-jsx": "lerna run test --scope=@atom-iq/babel-plugin-jsx",
    "test:all": "yarn test && yarn test:plugin-jsx",
    "lint": "eslint 'packages/**'",
    "bootstrap": "lerna bootstrap",
    "release": "lerna publish --conventional-commits --create-release github --no-commit-hooks",
    "release:prerelease": "lerna publish --conventional-commits --conventional-prerelease --create-release github --no-commit-hooks",
    "release:graduate": "lerna publish --conventional-commits --conventional-graduate --create-release github --no-commit-hooks",
    "postinstall": "husky install"
  },
  "private": true,
  "keywords": [],
  "author": "Adam Filipek <adamfilipek1@gmail.com> (https://github.com/adamf92)",
  "devDependencies": {
    "@babel/cli": "^7.12.16",
    "@babel/core": "^7.12.16",
    "@babel/plugin-proposal-class-properties": "^7.12.13",
    "@babel/plugin-syntax-jsx": "^7.12.13",
    "@babel/preset-env": "^7.12.16",
    "@babel/preset-typescript": "^7.12.16",
    "@octokit/core": "^3.2.5",
    "@rollup/plugin-alias": "^3.1.2",
    "@rollup/plugin-babel": "^5.3.0",
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-json": "^4.1.0",
    "@rollup/plugin-node-resolve": "^11.2.0",
    "@rollup/plugin-typescript": "^8.2.0",
    "@types/jest": "^26.0.20",
    "@typescript-eslint/eslint-plugin": "^4.15.1",
    "@typescript-eslint/parser": "^4.15.1",
    "babel-jest": "^26.6.3",
    "commitizen": "^4.2.5",
    "cz-conventional-changelog": "3.3.0",
    "eslint": "^7.20.0",
    "eslint-config-prettier": "^7.2.0",
    "eslint-plugin-import": "^2.25.4",
    "eslint-plugin-jest": "^24.1.3",
    "eslint-plugin-prettier": "^3.3.1",
    "husky": "5",
    "jest": "^26.6.3",
    "lerna": "^3.22.1",
    "lint-staged": ">=10.5.4",
    "prettier": "^2.2.1",
    "rollup": "^2.39.0",
    "rollup-plugin-bundle-size": "^1.0.3",
    "rollup-plugin-gzip": "^2.5.0",
    "rollup-plugin-sizes": "^1.0.3",
    "rollup-plugin-terser": "^7.0.2",
    "standard-version": "^9.1.0",
    "tslib": "^2.1.0",
    "typescript": "^4.1.5"
  },
  "repository": "git+https://github.com/Atom-iQ/framework.git#master",
  "workspaces": [
    "packages/*",
    "dev-packages/*"
  ]
}
